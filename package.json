{
  "name": "react-night",
  "version": "1.0.0-alpha.0",
  "description": "night.js implementation for React",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/react-night.cjs.js",
  "module": "lib/react-night.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build",
    "build": "rollup -c",
    "watch": "npm run build -- --watch",
    "lint": "eslint 'src/**/*.{tsx,ts}' --fix",
    "prettier": "prettier --write 'src/**/*.{tsx,ts}'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/night-js/react-night.git"
  },
  "keywords": [
    "React",
    "hooks",
    "dark",
    "night",
    "switch",
    "sun"
  ],
  "bugs": {
    "url": "https://github.com/night-js/react-night/issues"
  },
  "homepage": "https://github.com/night-js/react-night#readme",
  "dependencies": {
    "night.js": "^1.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/react": "^16.9.49",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "react": "^16.13.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.2",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx,ts}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
